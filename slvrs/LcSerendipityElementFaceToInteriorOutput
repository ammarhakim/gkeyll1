if (polyOrder == 1)
{
  lowerFaceToInteriorMapMatrices[0] << 1,0,
                                       1,0,
                                       0,1,
                                       0,1;
  lowerFaceToInteriorMapMatrices[1] << 1,0,
                                       0,1,
                                       0,1,
                                       1,0;
}
else if (polyOrder == 2)
{
