load(orthopoly);

/** Everything is in terms of Radau polynomials */
rightRadau(k,x) := (-1)^k*(legendre_p(k,x) - legendre_p(k-1,x))/2;

/** DG scheme */
rightGdg(k,x) := rightRadau(k,x);

/** Gauss */
rightGga(k,x) := k/(2*k-1)*rightRadau(k,x) + (k-1)/(2*k-1)*rightRadau(k-1,x);

/** Lumped-lobatto */
rightGllo(k,x) := (k-1)/(2*k-1)*rightRadau(k,x) + k/(2*k-1)*rightRadau(k-1,x);
